{
  "name": "@qapish/scale",
  "version": "0.0.0",
  "license": "GPL-3.0-only",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./metadata": {
      "types": "./dist/metadata.d.ts",
      "import": "./dist/metadata.js",
      "default": "./dist/metadata.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist || true",
    "test": "vitest run"
  },
  "tsup": {
    "entry": ["src/index.ts", "src/metadata.ts"],
    "format": ["esm"],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "minify": false,
    "target": "es2022"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
