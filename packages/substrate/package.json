{
  "name": "@qapish/substrate",
  "version": "0.0.0",
  "license": "GPL-3.0-only",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist || true",
    "test": "vitest run"
  },
  "dependencies": {
    "@qapish/provider-ws": "workspace:*",
    "@qapish/runtime": "workspace:*",
    "@qapish/scale": "workspace:*",
    "@qapish/ss58": "workspace:*",
    "@qapish/crypto": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "minify": false
  }
}
